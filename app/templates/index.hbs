<div class="container table-responsive">
  <div> <h1> Customers</h1></div>
  <table class="table">
    <thead>
      <th>id</th>
      <th>name</th>
      <th>email</th>
      <th>Action</th>
    </thead>
    <tbody>
      {{#each model as |customer|}}
        <tr>
          <td>{{customer.id}}</td>
          <td>{{customer.name}}</td>
          <td>{{customer.email}}</td>
          <td>
            {{!-- <button
              class="btn btn-primary"
              {{action 'viewPremises'}}
            >
              View Premises
            </button> --}}
             {{#link-to 'customer.premises' customer class="btn btn-primary"}}
                View premises
              {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>